generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = "mongodb://admin:pass@localhost:27017/UBOJNIA_BOT?authSource=admin"
}

model User {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  user_id    String   @unique
  join_at    DateTime @default(now())
  money      Int?     @default(0)
  reputation Int?     @default(0)
  experience Int?     @default(0)
  level      Int?     @default(0)
}

model Guild {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  guild_id     String   @unique
  join_at      DateTime @default(now())
  owner_id     String   @unique
}
